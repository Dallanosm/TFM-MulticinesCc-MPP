<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actionToolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/toolbarBackground"
    android:elevation="4dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbarCloseIconHeight"
        android:layout_marginStart="@dimen/toolbarCloseIconMarginStart"
        android:src="@drawable/ic_close" />

    <TextView
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbarTitleMargin"
        android:textColor="@color/toolbarTitleTextColor"
        android:textSize="@dimen/toolbarTitleSize"
        android:textStyle="bold"
        tools:text="Toolbar title" />

</android.support.v7.widget.Toolbar>